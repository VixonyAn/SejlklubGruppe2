@page
@using ClassLibrary.Models;
@model SejlklubRazor.Pages.Boats.AddBoatModel
@{
    ViewData["Title"] = "Opret Båd";
}

<h3>Opret en Båd</h3>

<form method="post">
    <div class="form-group">
        <label>Vælg Bådens Model</label>
        <select id="ModelName" name="ModelName"
                asp-for="@Model.ModelName" asp-items="@Model.ModelSelectList">
        </select>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Nickname" class="control-label"></label>
        <input asp-for="@Model.Nickname" style="display: br; width: 30%;" class="form-control" />
    </div>
    <span class="text-danger">@Model.MessageError</span>
    <div class="form-group">
        <label asp-for="@Model.Registration" class="control-label"></label>
        <input asp-for="@Model.Registration" style="display: br; width: 30%;" class="form-control" />
    </div>
    <div class="formgroup">
        <input type="submit" value="Opret Ny Båd" class="btn btn-primary" />
    </div>
</form>