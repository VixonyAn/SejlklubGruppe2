@page
@using ClassLibrary.Models;
@model SejlklubRazor.Pages.Boats.EditBoatModel
@{
    ViewData["Title"] = "Opdater Bådens Information";
}

<h3>Opdater Bådens Information</h3>

<form method="post">
    <div class="form-group">
        <label asp-for="@Model.Registration" class="control-label"></label>
        <input asp-for="@Model.Registration" style="display: br; width: 30%;" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.newRegistration" class="control-label"></label>
        <input asp-for="@Model.newRegistration" style="display: br; width: 30%;" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Nickname" class="control-label"></label>
        <input asp-for="@Model.Nickname" style="display: br; width: 30%;" class="form-control" />
    </div>
    <div class="formgroup">
        <input type="submit" value="Edit Boat" class="btn btn-primary" />
    </div>
</form>