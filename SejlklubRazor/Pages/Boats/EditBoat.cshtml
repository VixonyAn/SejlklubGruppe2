@page
@using ClassLibrary.Models;
@model SejlklubRazor.Pages.Boats.EditBoatModel
@{
    ViewData["Title"] = "Opdater Bådens Information";
}

<h3>Opdater Bådens Information</h3>

<form method="post">
    <div class="form-group">
        <label asp-for="@Model.oldBoatReg" class="control-label"></label>
        <input asp-for="@Model.oldBoatReg" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.newBoatReg" class="control-label"></label>
        <input asp-for="@Model.newBoatReg" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.newNickname" class="control-label"></label>
        <input asp-for="@Model.newNickname" class="form-control" />
    </div>
    <div class="formgroup">
        <input type="submit" value="Edit Boat" class="btn btn-primary" />
    </div>
</form>