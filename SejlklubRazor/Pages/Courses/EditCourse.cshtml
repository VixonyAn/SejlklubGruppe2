@page
@using ClassLibrary.Models;
@model SejlklubRazor.Pages.Courses.EditCourseModel
@{
    ViewData["Title"] = "Opdater Holdets Information";
}
<h3>Opdater Holdets Information</h3>

<form method="post">
    <div class="form-group">
       
        <label asp-for="@Model.Name" class="control-label"></label>
        <input asp-for="@Model.Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.MasterName" class="control-label"></label>
        <input asp-for="@Model.MasterName" style="display: br; width: 30%;" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.StartDate" class="control-label"></label>
        <input asp-for="@Model.StartDate" style="display: br; width: 30%;" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.EndDate" class="control-label"></label>
        <input asp-for="@Model.EndDate" style="display: br; width: 30%;" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.MinAttendeeNum" class="control-label"></label>
        <input asp-for="@Model.MinAttendeeNum" style="display: br; width: 30%;" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.MaxAttendeeNum" class="control-label"></label>
        <input asp-for="@Model.MaxAttendeeNum" style="display: br; width: 30%;" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Summary" class="control-label"></label>
        <input asp-for="@Model.Summary" style="display: br; width: 30%;" class="form-control" />
        
    </div>
    <div class="form-group">
        <label asp-for="@Model.Description" class="control-label"></label>
        <input asp-for="@Model.Description" style="display: br; width: 30%;" class="form-control" />
        
    </div>



    <div class="formgroup">
        <form style="display: inline;" asp-page-handler="Edit" asp-route-id="@Model.Course.Id">
        <input type="submit" value="Edit Course" class="btn btn-primary" />
        </form>
    </div>
    

    <div class=" col-md-4 text-center">
    <form style="display: inline;" asp-page-handler="Delete" asp-route-deleteId="@Model.Course.Id">
        <input type="image" src="~/Images/trash3.svg" value="Delete" />
    </form>
    </div>



</form>