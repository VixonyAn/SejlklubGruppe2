@page
@using ClassLibrary.Models;
@using SejlklubRazor.Pages;
@model SejlklubRazor.Pages.Courses.ShowCourseList.ShowCourseList
@{
    ViewData["Title"] = "Klubbens Hold";
}

<h3>Klubbens Hold</h3>

<btn>
    <a class="nav-link text-dark bg-primary" asp-page="AddCourse">Opret nyt Hold</a>
</btn>


<btn>
    <a class="nav-link text-dark bg-primary" asp-page="CourseForMember">vis alle hold som en </a>
</btn>

<table class="table">
    <thead>
        <tr>
            <th>Titel</th>
            <th>Pladser tilbage</th>
            <th>Beskrivelse</th>
            <th>Hold lavet af</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Course item in Model.ListOfCourses)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.AttendeeRange[0]-@item.Attendees.Count</td> 
                <td>@item.Description</td>
                <td>@item.Master.Name</td>
                <td>
                    <form method="post" style="display: inline;" asp-page-handler="Edit" asp-route-id="@item.Id">
                        <input type="submit" value="Edit" />
                    </form>
                    <form method="post" style="display: inline;" asp-page-handler="Delete" asp-route-deleteId="@item.Id">
                        <input type="submit" value="Delete" />
                    </form>
                </td>

            </tr>
        }
    </tbody>
</table>