@page
@using ClassLibrary.Models;
@using SejlklubRazor.Pages;
@model SejlklubRazor.Pages.Courses.ShowCourseList.ShowCourseList
@{
    ViewData["Title"] = "Klubbens Hold";
}

<h3>Klubbens Hold</h3>

<btn>
    <a class="nav-link text-dark bg-primary" asp-page="AddCourse">Opret nyt Hold</a>
</btn>


<btn>
    <a class="nav-link text-dark bg-primary" asp-page="CourseForMember">vis alle hold som en </a>
</btn>

<table class="table">
    <thead>
        <tr>
            <th>Titel</th>
            <th>pladser tilbage</th>
            <th>Kort Beskrivelse</th>
            <th>hold lavet af</th>
        </tr>
    </thead>
    <tbody>

        @foreach (Course item in Model.ListOfCourses)
        {
            <tr>
                <td>@item.Name</td>
                <td>@(item.AttendeeRange[1]-item.Attendees.Count)</td> 
                <td>@item.Summary</td>
                <td>@item.Master.Name</td>

                <td>

                    <form style="display: inline;" asp-page-handler="Edit" asp-route-id="@item.Id">
                        <input type="image" src ="~/Images/pencil-square.svg" />
                        </form>


                    <form style="display: inline;" asp-page-handler="Delete" asp-route-deleteId="@item.Id">
                        <input type="image" src="~/Images/trash3.svg" />
                    </form>
                </td>

            </tr>
        }
    </tbody>
</table>