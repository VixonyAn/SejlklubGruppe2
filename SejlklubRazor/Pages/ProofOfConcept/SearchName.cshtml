@page
@using ClassLibrary.Helpers
@model SejlklubRazor.Pages.ProofOfConcept.SearchNameModel
@{
    ViewData["Title"] = "Proof of concept";
}


<input id="queryField" type="text" oninput="searchFunc(queryField.value)" />


<table class="table">
    <thead>
        <tr>
            <th>Navn</th>
            <th>Email</th>
            <th>Match-værdi</th>
        </tr>
    </thead>
    <tbody id="resultsTable">
        @foreach (DLStringValuePair s in Model.Matches)
        {
            <tr>
                <td>@s.DLString</td>
                <td>@s.SecondaryString</td>
                <td>@s.DLValue</td>
            </tr>
        }
        </tbody>
    </table>

    @section scripts{
        <script>
            async function searchFunc(name) {
            const response = await fetch(`?handler=Update&name=${name}`);
            const data = await response.json();
            updateTable(data);
        }

        function updateTable(data) {
            const tableBody = document.getElementById('resultsTable');
            tableBody.innerHTML = ''; // Clear existing rows

            data.forEach(item => {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>${item.dlString}</td>
                    <td>${item.secondaryString}</td>
                    <td>${item.dlValue}</td>
                `;
                tableBody.appendChild(row);
            });
        }
        </script>
    }
